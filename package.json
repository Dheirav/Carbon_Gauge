{
  "name": "carbon-emissions-tracker",
  "version": "1.0.0",
  "description": "A web-based application for tracking and analyzing carbon emissions from industrial and commercial machines",
  "main": "index.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-all": "npm install && cd client && npm install",
    "build": "cd client && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "carbon-emissions",
    "sustainability",
    "industrial-machines",
    "environmental-tracking"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-chartjs2": "^1.2.1"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  }
}
